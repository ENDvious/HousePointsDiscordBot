{{> header }}
{{> nav }}
  <main>
    <div class="text-center">
      <p>Nice {{username}} !<p>
      <p>Now you have to choose a password and your registration will be complete !</p>
      <form method="POST">
        <input type="hidden" name="un" value="{{username}}">
        <input type="hidden" name="tk" value="{{usertoken}}">
        <input type="hidden" name="st" value="2">
        <div class="col-md-6 m-auto">
          <div class="form-group">
            <input type="password" name="pw" placeholder="P4$$w0rD" class="form-control" required="required">
          </div>
          <div class="form-group">
            <input type="password" name="pwc" placeholder="Repeat P4$$w0rD" class="form-control" required="required">
          </div>
        </div>
        <button id="btn" class="btn btn-primary">
          Register
        </button>
      </form>
    </div>
  </main>
{{> footer }}